<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<query name="getUserDeptByDeptId">
		<![CDATA[FROM UserDept ud WHERE ud.dept.id=:deptId ]]>
	</query>
	<query name="getUserDeptByUserId">
		<![CDATA[FROM UserDept ud WHERE ud.user.id=:userId ]]>
	</query>
</hibernate-mapping>